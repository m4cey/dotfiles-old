# if [[ ! -e "$HOME/media/wallpapers-blur/$name" ]] && [[ $(cat /tmp/shader) == "bokeh" ]]; then
# 	magick "$bg" -blur 0x24 "$HOME/media/wallpapers-blur/$name"
# fi
# ln -fs "$HOME/media/wallpapers-blur/$name" $HOME/.local/share/bg-blur.png
